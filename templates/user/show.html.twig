{% extends 'base_backend.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">
                        User
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="{{ path('backend') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item active">User</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fa fa-file"></i> Item
                            </h3>
                            <div class="card-tools">
                                <a href="{{ path('user_index') }}" class="btn btn-info btn-xs">
                                    <i class="fa fa-arrow-left"></i> back to list
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>
                                            <span class="badge bg-primary">
                                                {{ user.id }}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ user.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>LastName</th>
                                        <td>{{ user.lastName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Phone</th>
                                        <td>{{ user.phone }}</td>
                                    </tr>
                                    <tr>
                                        <th>Address</th>
                                        <td>{{ user.address }}</td>
                                    </tr>
                                    <tr>
                                        <th>Notes</th>
                                        <td>{{ user.notes }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    <tr>
                                        <th>Roles</th>
                                        <td>{{ user.roles|join(', ')  }}</td>
                                    </tr>
                                    <tr>
                                        <th>IsActive</th>
                                        <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                                    </tr>
                                    <tr>
                                        <th>IsEnabled</th>
                                        <td>{{ user.isEnabled ? 'Yes' : 'No' }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-6">
                    <div class="card card-warning">
                        <div class="card-body">
                            {{ include('user/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-6">
                    <div class="card card-warning">
                        <div class="card-body">
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm pull-right">
                                <i class="fa fa-pencil"></i> edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
