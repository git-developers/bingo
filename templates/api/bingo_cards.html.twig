{% for key,bingoCard in bingoCards %}

    <div class="col-md-6">
        <div class="bingo-card">
            <div class="row">

                {% for key2,value in bingoCard %}
                    <div class="col">
                        <div class="card-letter">{{ key2|cardLetter }}</div>
                        <div class="card-numbers">
                            <div class="card-number">
                                {{ value[0] }}
                            </div>
                            <div class="card-number">
                                {{ value[1] }}
                            </div>
                            <div class="card-number">
                                {% if key2 == 2 %}
                                    <img src="{{ asset('build/images/logo_40x40.png') }}" class="img-circle elevation-2" alt="Tianos">
                                {% else %}
                                    {{ value[2] }}
                                {% endif %}
                            </div>
                            <div class="card-number">
                                {{ value[3] }}
                            </div>
                            <div class="card-number">
                                {{ value[4] }}
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% else %}
    <div class="col-md-6">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
            No hay Bingo cards. Contacte al admin del sistema.
        </div>
    </div>
{% endfor %}