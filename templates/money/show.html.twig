{% extends 'base_backend.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">
                        Money
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="{{ path('backend') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Money</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fa fa-file"></i> Item
                            </h3>
                            <div class="card-tools">
                                <a href="{{ path('money_index') }}" class="btn btn-info btn-xs">
                                    <i class="fa fa-arrow-left"></i> back to list
                                </a>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>
                                            <span class="badge bg-primary">
                                                {{ money.id }}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Code</th>
                                        <td>{{ money.code }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ money.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>RealValue</th>
                                        <td>{{ money.realValue }}</td>
                                    </tr>
                                    <tr>
                                        <th>NominalValue</th>
                                        <td>{{ money.nominalValue }}</td>
                                    </tr>
                                    <tr>
                                        <th>CreatedAt</th>
                                        <td>{{ money.createdAt ? money.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-6">
                    <div class="card card-warning">
                        <div class="card-body">
                            {{ include('money/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-6">
                    <div class="card card-warning">
                        <div class="card-body">
                            <a href="{{ path('money_edit', {'id': money.id}) }}" class="btn btn-warning btn-sm pull-right">
                                <i class="fa fa-pencil"></i> edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
